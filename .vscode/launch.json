    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch All Tests",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/bin/Debug/test_app.exe",
            "args": [
                "-b"
            ],
            "cwd": "${workspaceRoot}/bin/Debug",
            "preLaunchTask": "[BUILD] (Debug) Build All",
            "console": "externalTerminal"
        },
        {
            "name": "(Windows) Launch All Unit Tests",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/bin/Debug/test_app.exe",
            "args": [
                "-b",
                "-s",
                "[unit]"
            ],
            "cwd": "${workspaceRoot}/bin/Debug",
            "preLaunchTask": "[BUILD] (Debug) Build All",
            "console": "externalTerminal"
        }
    ]
}

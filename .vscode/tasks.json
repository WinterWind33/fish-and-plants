		{
			"label": "[Windows] (Debug) Build test_app",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"command": "cmake",
			"args": [
				"--build",
				".",
				"--target",
				"test_app",
				"--config",
				"Debug"
			],
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "(Linux) Clean build folder",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/buildLinux"
			},
			"command": "rm",
			"args": [
				"-r",
				"-f",
				"./*"
			],
			"group": "build"
		},
		{
			"label": "[CMake] (Aarch64 Debug) Configure",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/buildLinux"
			},
			"dependsOn": "(Linux) Clean build folder",
			"command": "cmake",
			"args": [
				"..",
				"-DCOMPILE_AARCH64_ON_LINUX=True",
				"--toolchain",
				"toolchains/aarch64-toolchain.cmake"
			],
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "[BUILD] (Aarch64 Release) Perform release",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/buildLinux"
			},
			"command": "cmake",
			"args": [
				"--build",
				".",
				"--config",
				"Release",
				"--target",
				"ALL_BUILD"
			],
			"problemMatcher": [],
			"group": "build"
		}
	]

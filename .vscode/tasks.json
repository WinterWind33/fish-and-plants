{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "[Windows] (Debug) Build All",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"command": "cmake",
			"args": [
				"--build",
				".",
				"--target",
				"ALL_BUILD",
				"--config",
				"Debug"
			],
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "[BUILD] (Linux Debug) Build All",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/buildLinux"
			},
			"command": "cmake",
			"args": [
				"--build",
